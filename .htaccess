# Enable Rewrite Engine
RewriteEngine On

# Force HTTPS (required for WebRTC)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Set default index file
DirectoryIndex index.php

# Disable directory listing
Options -Indexes

# Block direct access to sensitive files
<FilesMatch "\.(env|sql|bak|ini|log|md)$">
    Require all denied
</FilesMatch>
<Files "config.php">
    Require all denied
</Files>

# Enable CORS for API endpoints (if needed)
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Cache static assets on the edge
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 7 days"
    ExpiresByType application/javascript "access plus 7 days"
    ExpiresByType image/png "access plus 7 days"
    ExpiresByType image/jpeg "access plus 7 days"
    ExpiresByType image/gif "access plus 7 days"
    ExpiresByType image/svg+xml "access plus 7 days"
    ExpiresByType image/webp "access plus 7 days"
    ExpiresByType image/x-icon "access plus 7 days"
    ExpiresByType font/woff "access plus 7 days"
    ExpiresByType font/woff2 "access plus 7 days"
    ExpiresByType font/ttf "access plus 7 days"
</IfModule>
